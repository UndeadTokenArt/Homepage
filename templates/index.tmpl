<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{.FirstName}} {{.LastName}} | {{.JobTitle}}</title>
    
    <!-- <script src="https://cdn.tailwindcss.com"></script> -->

    <!-- Set the style sheet and scripts -->
    <link rel="stylesheet" href="/static/css/homepageStyle.css">
    <script src="/static/js/homepageScript.js"></script>

</head>
<body class="min-h-screen">
    <!-- Navigation -->
    <nav class="bg-darker/80 backdrop-blur-md fixed w-full z-50">
        <div class="max-w-7xl mx-auto">
            <div class="flex items-center justify-between h-16">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <span class="text-green text-2xl font-bold">Undead<span class="text-white">Token</span></span>
                    </div>
                </div>
                <div class="hidden md:block">
                    <div class="ml-10 flex items-baseline space-x-8 px-10">
                        {{range .NavItems}}
                        <a href="{{.Href}}" class="nav-link decoration-none text-green hover:text-blue px-3 py-2 rounded-md text-sm font-medium">{{.Text}}</a>
                        {{end}}
                    </div>
                </div>
                <div class="md:hidden">
                    <button id="mobile-menu-button" class="text-gray-300 hover:text-blue focus:outline-none">
                        <i class="fas fa-bars text-xl"></i>
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Mobile menu -->
        <div id="mobile-menu" class="hidden md:hidden bg-darker border-t border-blue/10">
            <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
                {{range .NavItems}}
                <a href="{{.Href}}" class="text-gray-300 hover:text-blue block px-3 py-2 rounded-md text-base font-medium">{{.Text}}</a>
                {{end}}
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section id="home" class="pt-32 pb-20 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto">
        <div class="flex flex-col md:flex-row items-center justify-between">
            <div class="md:w-1/2 mb-10 md:mb-0">
                <h1 class="text-4xl md:text-6xl font-bold mb-4">
                    {{.FirstName}}<span class="gradient-text"> {{.LastName}}</span>
                </h1>
                <h2 class="text-2xl md:text-3xl font-semibold mb-6 text-gray-300">
                    {{.JobTitle}} <span class="text-blue">{{.Tagline}}</span>
                </h2>
                <p class="text-gray-400 mb-8 text-lg">
                    {{.HeroDescription}}
                </p>
                <div class="flex space-x-4">
                    <a href="#projects" class="bg-green text-white hover:bg-blue/80 px-10 py-4 rounded-lg font-bold decoration-none transition duration-300">
                        View My Work
                    </a>
                    <a href="#contact" class="bg-green text-white hover:bg-blue/80 px-10 py-4 rounded-lg font-bold decoration-none transition duration-300">
                        Contact Me
                    </a>
                </div>
            </div>
            <div class="md:w-1/2 flex justify-center">
                <div class="relative">
                    <div class="w-64 h-64 md:w-80 md:h-80 bg-blue/10 rounded-full flex items-center justify-center">
                        <div class="w-56 h-56 md:w-72 md:h-72 bg-blue/20 rounded-full flex items-center justify-center">
                            <div class="w-48 h-48 md:w-64 md:h-64 bg-blue/30 rounded-full flex items-center justify-center overflow-hidden border-2 border-blue/40">
                                <img src="{{.ProfileImage}}" 
                                     alt="{{.FirstName}} {{.LastName}}" 
                                     class="w-full h-full object-cover">
                            </div>
                        </div>
                    </div>
                    {{if .AvailableForWork}}
                    <div class="absolute -bottom-5 -right-5 bg-darker p-3 rounded-lg border border-blue/20 shadow-lg">
                        <div class="flex items-center">
                            <div class="w-3 h-3 bg-green rounded-full mr-2"></div>
                            <span class="text-sm font-medium">Available for work</span>
                        </div>
                    </div>
                    {{end}}
                </div>
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section id="about" class="py-20 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto bg-darker/50 rounded-xl my-10">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold mb-4">
                <span class="border-b-2 border-blue pb-2">{{.AboutTitle}}</span>
            </h2>
            <p class="text-gray-400 max-w-3xl mx-auto">
                {{.AboutIntro}}
            </p>
        </div>
        
        <div class="flex flex-col md:flex-row items-center">
            <div class="md:w-1/2 mb-10 md:mb-0 md:pr-10">
                {{range .AboutParagraphs}}
                <p class="text-gray-300 mb-6">
                    {{.}}
                </p>
                {{end}}
            </div>
            <div class="md:w-1/2">
                <h3 class="text-xl font-semibold mb-6 text-blue">My Skills</h3>
                <div class="flex flex-wrap gap-3">
                    {{range .Skills}}
                    <span class="skill-pill bg-blue/10 text-blue px-4 py-2 rounded-full text-sm font-medium transition duration-300">{{.}}</span>
                    {{end}}
                </div>
                
                <div class="mt-10">
                    <h3 class="text-xl font-semibold mb-6 text-blue">Experience</h3>
                    <div class="space-y-6">
                        {{range .Experience}}
                        <div class="border-l-2 border-blue pl-4">
                            <h4 class="font-medium text-lg">{{.Title}}</h4>
                            <p class="text-gray-400 text-sm">{{.Company}} • {{.Year}}</p>
                            <p class="text-gray-300 mt-2">{{.Description}}</p>
                        </div>
                        {{end}}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="py-20 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold mb-4">
                <span class="border-b-2 border-blue pb-2">My Projects</span>
            </h2>
            <p class="text-gray-400 max-w-3xl mx-auto">
                Here are some of my recent projects. Each one was built with care and attention to detail.
            </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {{range .Projects}}
            <!-- Project -->
            <div class="project-card bg-darker rounded-xl overflow-hidden border border-blue/10 transition duration-300">
                <div class="h-48 overflow-hidden">
                    <img src="{{.Image}}" 
                         alt="{{.Title}}" 
                         class="w-full h-full object-cover hover:scale-105 transition duration-500">
                </div>
                <div class="p-6">
                    <div class="flex justify-between items-start mb-3">
                        <h3 class="text-xl font-bold">{{.Title}}</h3>
                        <span class="text-xs bg-blue/10 text-blue px-4 py-4 rounded-lg">{{range $i, $tech := .Technologies}}{{if $i}}, {{end}}{{$tech}}{{end}}</span>
                    </div>
                    <p class="text-gray-400 mb-4">
                        {{.Description}}
                    </p>
                    <div class="flex justify-between items-center">
                        {{if .ProjectURL}}
                        <a href="{{.ProjectURL}}" class="text-blue hover:text-blue/80 font-medium flex items-center">
                            View Project <i class="fas fa-arrow-right ml-2"></i>
                        </a>
                        {{end}}
                        <div class="flex space-x-2">
                            {{if .GithubURL}}
                            <a href="{{.GithubURL}}" class="text-gray-400 hover:text-blue">
                                <i class="fab fa-github"></i>
                            </a>
                            {{end}}
                            {{if .LiveURL}}
                            <a href="{{.LiveURL}}" class="text-gray-400 hover:text-blue">
                                <i class="fas fa-external-link-alt"></i>
                            </a>
                            {{end}}
                        </div>
                    </div>
                </div>
            </div>
            {{end}}

        
        <div class="text-center mt-16">
            <a href="#" class="items-center px-4 py-4 border border-blue text-blue hover:bg-blue/10 rounded-lg font-medium">
                View All Projects on GitHub 
            </a>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-20 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto bg-darker/50 rounded-xl my-10">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold mb-4">
                <span class="border-b-2 border-blue pb-2">Get In Touch</span>
            </h2>
            <p class="text-gray-400 max-w-3xl mx-auto">
                Have a project in mind or want to discuss potential opportunities? I'd love to hear from you!
            </p>
        </div>
        
        <div class="flex flex-col md:flex-row gap-10">

            
            <div class="md:w-1/2">
                <div class="bg-dark p-8 rounded-xl h-full border border-blue/10">
                    <h3 class="text-xl font-semibold mb-6 text-blue">Contact Information</h3>
                    
                    <div class="space-y-6">
                        <div class="flex items-start">
                            <div class="flex-shrink-0 bg-blue/90 p-3 rounded-lg text-blue">
                                <img src="static/icons/mail.svg" alt="Email Icon" class="w-10 h-10" />
                                <i class="fas fa-envelope text-lg"></i>
                            </div>
                            <div class="ml-4">
                                <h4 class="text-sm font-medium text-gray-400">Email</h4>
                                <p class="text-gray-300"><a href="mailto:{{.Email}}">{{.Email}}</a></p>
                            </div>
                        </div>
                        
                        <div class="flex items-start">
                            <div class="flex-shrink-0 bg-blue/90 p-3 rounded-lg text-blue">
                                <img src="static/icons/phone.svg" alt="Phone Icon" class="w-10 h-10" />
                                <i class="fas fa-phone-alt text-lg"></i>
                            </div>
                            <div class="ml-4">
                                <h4 class="text-sm font-medium text-gray-400">Phone</h4>
                                <p class="text-gray-300">{{.Phone}}</p>
                            </div>
                        </div>
                        
                        <div class="flex items-start">
                            <div class="flex-shrink-0 bg-blue/90 p-3 rounded-lg text-blue">
                                <img src="static/icons/mappin.svg" alt="Map pin Icon" class="w-10 h-10" />
                                <i class="fas fa-map-marker-alt text-lg"></i>
                            </div>
                            <div class="ml-4">
                                <h4 class="text-sm font-medium text-gray-400">Location</h4>
                                <p class="text-gray-300">{{.Location}}</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mt-10">
                        <h3 class="text-xl font-semibold mb-6 text-blue">Follow Me</h3>
                        <div class="flex space-x-4">
                            <a href="{{.SocialLinks.Github}}" class="w-10 h-10 p-3 bg-blue/90 hover:bg-blue/20 text-blue rounded-full transition duration-300">
                                <i class="fab fa-github"></i>
                                <img src="static/icons/github.svg" alt="github Icon" class="w-10 h-10"/>
                            </a>
                            <a href="{{.SocialLinks.LinkedIn}}" class="w-10 h-10 p-3 bg-blue/90 hover:bg-blue/20 text-blue rounded-full transition duration-300">
                                <i class="fab fa-linkedin-in"></i>
                                <img src="static/icons/linkedin.svg" alt="linkedin Icon" class="w-10 h-10"/>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-darker py-10 border-t border-blue/10">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex flex-col md:flex-row justify-between items-center">
                <div class="mb-6 md:mb-0">
                    <span class="text-blue text-2xl font-bold">Undead<span class="text-white">Token</span></span>
                </div>
                <div class="flex flex-col items-center md:items-end">
                    <p class="text-gray-400 text-sm mb-2">
                        © 2025 Stephen Moore. All rights reserved.
                    </p>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>